                    lg:col-start-3 lg:col-end-13
                    
                    lg:justify-self-stretch
                    
                    
        "> 
            <span class="relative text-4xl md:text-5xl lg:text-6xl  font-['Mont'] drop-shadow-xl">
                <span>
                    <%= t('.title_1') %>
                    <br>
                    <%= t('.title_2') %>
                <span>
                <span data-text="<%= t('.title_3') %>" class="highlight">
                    <%= t('.title_3') %>
                </span>
                <br>
                <span data-text="<%= t('.title_4') %>" class="highlight">
                    <%= t('.title_4') %>
