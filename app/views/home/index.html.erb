<div class="container home">
    <div class="grid grid-cols-12 gap-4 mt-8 mb-4 md:mt-20">
        <%# Pic %>
        <div class="
                    col-start-3 col-end-11
                    row-start-2 row-end-8
                    md:col-start-1 md:col-end-7
                    md:row-start-1 md:row-end-8
                    lg:col-start-1 lg:col-end-6
                    <%# md:row-start-1 md:row-end-8 %>

        ">

            <%= image_tag 'sq2.jpg', class: 'w-full drop-shadow-xl rounded-sm aspect-square' %>
